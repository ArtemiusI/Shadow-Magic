// Nightsinger's Tithe

IF
	OR(6)
	Specifics(Player1,12)
	Specifics(Player2,12)
	Specifics(Player3,12)
	Specifics(Player4,12)
	Specifics(Player5,12)
	Specifics(Player6,12)
  GlobalGT("C0SA903","GLOBAL",49)
  Global("C0NightsingerTithe","GLOBAL",0)
THEN
  RESPONSE #100
	SetGlobal("C0NightsingerTithe","GLOBAL",1)
	ApplySpellRES("C0SA903B",Player1)
	Continue()
END

