// Shadow Sword

IF
  Race(Player1,VAMPIRE)
	OR(6)
	Specifics(Player1,12)
	Specifics(Player2,12)
	Specifics(Player3,12)
	Specifics(Player4,12)
	Specifics(Player5,12)
	Specifics(Player6,12)
  !PartyHasItem("c0saswd1")
  Global("C0ShadowSword","GLOBAL",0)
  LevelGT(Player1,5)
THEN
  RESPONSE #100
	SetGlobal("C0ShadowSword","GLOBAL",1)
	CreateVisualEffectObject("c0flmbld",Player1)
	GiveItemCreate("c0saswd1",Player1,0,0,0)
	DisplayStringHead(Player1,~The shadow adept has created a dark blade forged from shadowstuff.~)
	Continue()
END
  
IF
  HasItemEquiped("c0saswd1",Player1)
  Global("C0ShadowSword","GLOBAL",1)
  LevelGT(Player1,10)
THEN
  RESPONSE #100
	CreateVisualEffectObject("c0flmbld",Player1)
    ActionOverride(Player1,TransformItem("c0saswd1","c0saswd2"))
	DisplayStringHead(Player1,~The shadow adept's blade has increased in power.~)
	Continue()
END
  
